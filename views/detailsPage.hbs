<div class="row justify-content-center mt-5">
    <div class="d-flex border flex-column align-items-center col-6 col-md-4">
        <h3>{{showDetails.name}}</h3>
        <img class="align-self-center" src="{{showDetails.image}}" alt="showImage">   
    </div>
    <div class="d-flex flex-column border align-items-left col-md-8">
        <p class="lead">
            {{{showDetails.summary}}}
        </p>
        <code>Rating: {{showDetails.rating}}</code>

        <div class="d-flex mt-3">
            <a class="btn btn-warning" href="/">
			Back
		    </a>
            {{#if hasSite}}
                <a class="btn btn-outline-info" href="{{showDetails.official_site}}" target="_blank">Offical Site</a>
            {{/if}}
        </div>
      
        
    </div>

</div>




